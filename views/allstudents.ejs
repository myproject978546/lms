<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #container{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .student{
            display: flex;
            border: 2px solid red;
            border-radius: 5px;
            padding: 10px;
            justify-content: center;
            gap: 10px;
            align-items: center;
        }
        .total{
            background-color: royalblue;
            padding: 10px 15px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div id="container">
        <div class="total">TOTAL STUDENTS : <%= total %></div>
        <% students.forEach((student)=>{ %>
            <div class="student">
                <div class="student-details"><%= student.name %></div>
                <div class="student-details"><%= student.email %></div>
                <div class="student-details"><%= student.password %></div>
                <% if(student.status === false){ %>
                    <a href="/activate/<%= student._id %>">Activate</a>
                <% }else{ %>
                    <a href="/deactivate/<%= student._id %>">Deactivate</a>
                <% } %>
            </div>
        <% }) %>    
    </div>
</body>
</html>